{
    "compilerOptions": {
      "lib": ["dom", "es2016", "es2017", "es7", "es2020", "ESNext"],
      "target": "ESNext",
      "module": "ESNext",
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "outDir": "./build",
      "moduleResolution": "node",
      "isolatedModules": true,
      "jsx": "react",
      "allowJs": true,
    },
    "include": ["src"],
    "exclude": ["node_modules", "build"]
  }